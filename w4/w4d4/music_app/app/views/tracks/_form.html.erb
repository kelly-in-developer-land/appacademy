<form action="<%= url %>" method="<%= "POST" %>">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <% if form_method == "PATCH" %>
    <input type="hidden" name="_method" value="<%= form_method %>">
  <% end %>
  <p>
  <label for="track[album_id]">Album</label>
  <select name="track[album_id]" value="current_album">
    <% @band_albums.each do |album| %>
      <option value="<%= album.id %>"> <%= album.name %> </option>
    <% end %>
  </select>
  <p>
  <label for="track[title]">Title</label>
  <input type ="text" name="track[title]">
  <p>
  <input type="radio" name="track[status]" id="Regular">
  <label for="track[status]">Regular</label>
  <br>
  <input type="radio" name="track[status]" id="Bonus">
  <label for="track[status]">Bonus</label>
  <p>
  <label for="track[lyrics]">Lyrics</label>
  <input type ="textarea" name="track[lyrics]">
  <p>
  <p>
  <input type="submit" name="Submit">
</form>
