<h1><%= @album.name %></h1>

<p>
<% @album.tracks.each do |track| %>
  <p><a href="<%= track_url(track) %>"><%= track.title %></a>
<% end %>

<%= render "shared/buttons", edit: edit_album_url(@album), delete: album_url(@album), up: band_url(@band), down: album_tracks_url(@album), inner: "Track", create_inner: new_album_track_url(@album) %>
