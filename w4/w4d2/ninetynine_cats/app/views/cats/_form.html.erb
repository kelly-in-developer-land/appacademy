<form action="<%= form_action %>", method="post">

  <input type="hidden" name="_method" value="<%= form_method %>">

  <label for="cat-name">Name</label>
  <input type="text" name="cat[name]" id="cat-name" value="<%= cat.name %>">
  <p>

  <label for="cat-birth_date">Birthday</label>
  <input type="date" name="cat[birth_date]" id="cat-birth_date" value="<%= cat.birth_date %>">
  <p>

  <label for="cat-sex">Sex</label>
  <input type="text" name="cat[sex]" id="cat-sex" value="<%= cat.sex %>">
  <p>

  <label for="cat-color">Color</label>
  <select name="cat[color]" id="cat-color" value="<%= cat.color %>">
    <option value="orange">Orange</option>
    <option value="calico">Calico</option>
    <option value="black">Black</option>
  </select>
  <p>

  <label for="cat-description">Description</label>
  <textarea name="cat[description]" id="cat-description"><%= cat.description %></textarea>
  <p>

  <input type="submit" value="<%= submit_text %>">

</form>
